import java.util.*;
public class javabasics{
    public static void main(String args[]){
       Scanner sc = new Scanner(System.in);
       System.out.println("Enter the range: ");
       int n = sc.nextInt();
       //int n=5;
        int i = 1;
        int sum=0;
        while(i <= n){
            sum=sum+i;
             i++;
        }
        System.out.println("sum is : "+ sum);
    } 
}
